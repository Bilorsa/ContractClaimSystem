<Window x:Class="ContractClaimSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Contract Monthly Claim System" Height="400" Width="600">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Contract Monthly Claim System" 
                       FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <Button Content="Submit Claim" Click="SubmitClaim_Click" Margin="0,5"/>
            <Button Content="Upload Supporting Document" Click="UploadDocument_Click" Margin="0,5"/>
            <Button Content="Approve Claim (For Managers)" Click="ApproveClaim_Click" Margin="0,5"/>

            <TextBlock Text="Status: Prototype Only" Foreground="Black" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>